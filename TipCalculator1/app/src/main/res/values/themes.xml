<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipCalculator1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/img</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TipCalculator1.TextInsert">
        <item name="android:textColor">@color/white</item>
        <item name = "android:background">@drawable/textinput</item>
        <item name = "android:textColorHint">@color/white</item>
        <item name = "android:padding">10dp</item>
    </style>
    <style name="Theme.TipCalculator1.Title">
        <item name="android:layout_width"> 412dp</item>
        <item name="android:layout_height"> 100dp</item>
        <item name="android:gravity"> center</item>
        <item name="android:textStyle"> bold</item>
        <item name="android:textColor"> #673AB7</item>
        <item name="android:shadowColor"> #000400</item>
        <item name="android:shadowRadius"> 10</item>
        <item name="android:shadowDx"> 1</item>
        <item name="android:shadowDy"> 5</item>
    </style>
    <style name="Theme.TipCalculator1.Button">
        <item name = "android:textAllCaps">true</item>
        <item name = "android:background">@color/green</item>
        <item name="android:shadowColor"> #000400</item>
        <item name="android:shadowRadius"> 10</item>
        <item name="android:shadowDx"> 1</item>
        <item name="android:shadowDy"> 100</item>
    </style>
</resources>